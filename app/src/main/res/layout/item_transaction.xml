<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_small"
    android:layout_marginVertical="@dimen/spacing_xsmall"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/system_outline_variant"
    app:cardCornerRadius="@dimen/card_corner_radius"
    style="@style/Widget.Material3.CardView.Outlined">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_medium"
        android:baselineAligned="false">

        <!-- Left side - Description, Category, Date -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Grocery Shopping"/>

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:alpha="0.8"
                android:background="@drawable/bg_category_pill"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                tools:text="Shopping"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:alpha="0.6"
                tools:text="Today, 2:30 PM"/>

        </LinearLayout>

        <!-- Right side - Amount -->
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_medium"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            tools:text="-$24.99"
            tools:textColor="@color/expense_color"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>